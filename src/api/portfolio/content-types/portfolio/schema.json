{
  "kind": "collectionType",
  "collectionName": "portfolios",
  "info": {
    "singularName": "portfolio",
    "pluralName": "portfolios",
    "displayName": "portfolio"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "alt": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Photographie culinaire",
        "Création de recettes",
        "Elsi Food",
        "Restaurants & Co",
        "Produits",
        "Reportage métier"
      ],
      "required": true
    },
    "photo": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    }
  }
}
